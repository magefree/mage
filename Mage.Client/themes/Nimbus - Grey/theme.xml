        gameEndTextBackgroundColor="rgba(240, 240, 240, 140)"
        cardTooltipBackgroundColor="rgb(204, 204, 204)"
        playerPanelInactiveBackgroundColor="rgba(172, 172, 172, 200)"
        playerPanelActiveBackgroundColor="rgba(180, 234, 180, 200)"
        playerPanelDeadBackgroundColor="rgba(99, 99, 99, 200)"
        cardIconsFillColor="rgb(158, 158, 158)"
        cardIconsStrokeColor="black"
        cardIconsTextColor="black"
    />
    <themeDefaults>
        <default key="nimbusBlueGrey" color="rgb(158, 148, 158)" />
        <default key="nimbusLightBackground" color="rgb(215, 215, 215)" />
        <default key="nimbusBase" color="rgb(102, 102, 102)" />
        <default key="control" color="rgb(212, 212, 212)" />
        <default key="info" color="rgb(189, 189, 164)" />
    </themeDefaults>
    <themeResources>
        <resource name="/winloss/game_lost.jpg" relPath="/winloss/game_lost.jpg" />
        <resource name="/winloss/game_won.jpg" relPath="/winloss/game_won.jpg" />
