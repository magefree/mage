<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <appender name="diagfile" class="ch.qos.logback.core.FileAppender">
    <File>magediag.log</File>
    <encoder>
      <pattern>%-5p [%d{yyyy-MM-dd HH:mm [ss:SSS]}] %C{1}[%t]: %m%n</pattern>
    </encoder>
  </appender>
  <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%-5p %d{yyyy-MM-dd HH:mm:ss,SSS} %-90m =&gt;[%t] %C{1}.%M %n</pattern>
    </encoder>
    <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      <level>debug</level>
    </filter>
  </appender>
  <appender name="logfile" class="ch.qos.logback.core.FileAppender">
    <File>mageserver.log</File>
    <encoder>
      <pattern>%-5p %d{yyyy-MM-dd HH:mm:ss,SSS} %-90m =&gt;[%t] %C{1}.%M %n</pattern>
    </encoder>
  </appender>
  <logger name="mage.player.ai" level="warn"/>
  <logger name="mage.server.tournament" additivity="false" level="INFO">
    <appender-ref ref="diagfile"/>
  </logger>
  <logger name="mage.server.game" additivity="false" level="INFO">
    <appender-ref ref="diagfile"/>
  </logger>
  <logger name="com.j256.ormlite" level="warn"/>
  <root level="info">
    <appender-ref ref="console"/>
    <appender-ref ref="logfile"/>
  </root>
</configuration>

